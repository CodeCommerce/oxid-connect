{
  "name": "makaira",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf dist/*",

    "prebuild": "npm run clean",
    "build": "npm run build:styles && npm run build:scripts",
    "build:styles": "stylus < src/styles/main.styl | hashmark -l 8 --silent 'dist/main.{hash}.css'",
    "build:scripts": "babel < src/scripts/main.js --presets=es2015 | hashmark -l 8 --silent 'dist/main.{hash}.js'",

    "watch:styles": "stylus --watch src/styles/main.styl --out dist/",
    "watch:scripts": "babel --watch src/scripts/main.js --out-file dist/main.js --presets=es2015",

    "predev": "npm run clean",
    "dev": "npm-run-all --parallel watch:*"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "hashmark": "^5.0.0",
    "npm-run-all": "^4.0.2",
    "stylus": "^0.54.5"
  }
}
