{
  "name": "makaira",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf dist/*",

    "prebuild": "npm run clean",
    "build": "npm run build:styles && npm run build:scripts",
    "build:styles": "stylus --compress --use autoprefixer-stylus < src/styles/main.styl | hashmark -l 8 --silent 'dist/main.{hash}.css'",
    "build:scripts": "browserify src/scripts/main.js --transform [ babelify --presets=es2015] | hashmark -l 8 --silent 'dist/main.{hash}.js'",

    "watch:styles": "stylus --watch src/styles/main.styl --out dist/main.css",
    "watch:scripts": "watchify src/scripts/main.js --verbose --transform [ babelify --presets=es2015] --outfile dist/main.js",

    "predev": "npm run clean",
    "dev": "npm-run-all --parallel watch:*" 
  },
  "browserslist": [
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer-stylus": "^0.14.0",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "hashmark": "^5.0.0",
    "npm-run-all": "^4.0.2",
    "stylus": "^0.54.5",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "nouislider": "^10.0.0"
  }
}
